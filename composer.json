{
    "name": "jonom/silverstripe-someconfig",
    "description": "Combines the CRUD features of ModelAdmin with the singleton settings editing of SiteConfig so content and settings can be co-located.",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "site config",
        "siteconfig",
        "modeladmin",
        "model admin",
        "configuration",
        "config"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Jono Menz",
            "homepage": "https://jonomenz.com"
        }
    ],
    "require": {
        "silverstripe/siteconfig": "^6",
        "silverstripe/admin": "^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "JonoM\\SomeConfig\\": "src/",
            "JonoM\\SomeConfig\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
